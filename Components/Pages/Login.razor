@page "/login"
@rendermode InteractiveServer
@inject Multimedialny_przewodnik_po_Uczelni.Services.UserService UserService
@inject Multimedialny_przewodnik_po_Uczelni.Services.CustomAuthStateProvider AuthProvider
@inject NavigationManager Nav

<PageTitle>Logowanie</PageTitle>

<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                Logowanie
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">Nazwa użytkownika:</label>
                    <input type="text" @bind="username" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Hasło:</label>
                    <input type="password" @bind="password" class="form-control" />
                </div>

                @if (!string.IsNullOrEmpty(error))
                {
                    <div class="alert alert-danger">@error</div>
                }

                <button class="btn btn-primary w-100" @onclick="HandleLogin">Zaloguj się</button>
                <a href="/register" class="d-block text-center mt-2">Nie masz konta? Zarejestruj się</a>
            </div>
        </div>
    </div>
</div>

@code {
    private string username = "";
    private string password = "";
    private string error = "";

    private async Task HandleLogin()
    {
        var user = await UserService.LoginUserAsync(username, password);

        if (user != null)
        {
            await AuthProvider.MarkUserAsAuthenticated(user);

            if (user.Role == "Admin")
            {
                Nav.NavigateTo("/admin-map");
            }
            else
            {
                Nav.NavigateTo("/");
            }
        }
        else
        {
            error = "Błędna nazwa użytkownika lub hasło!";
        }
    }
}